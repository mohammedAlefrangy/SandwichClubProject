<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
        android:padding="10dp"
     tools:context="com.udacity.sandwichclub.DetailActivity">

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/sandwich_picture_content_description"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/detail_also_known_as_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_iv"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:text="@string/detail_also_known_as_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/also_known_as_Show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_iv"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/detail_also_known_as_label"
        android:paddingLeft="10dp" />


    <TextView
        android:id="@+id/detail_place_of_origin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/also_known_as_Show"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/detail_place_of_origin_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/place_of_origin_Show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/also_known_as_Show"
        android:layout_marginTop="16dp"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/detail_place_of_origin_label" />


    <TextView
        android:id="@+id/detail_ingredients_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_of_origin_Show"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/detail_ingredients_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ingredients_Show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_of_origin_Show"
        android:layout_marginTop="16dp"
        android:paddingLeft="10dp"
        android:layout_toEndOf="@id/detail_ingredients_label"
        tools:ignore="RtlCompat" />


    <TextView
        android:id="@+id/detail_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingredients_Show"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/detail_description_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_Show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingredients_Show"
        android:layout_marginTop="16dp"
        android:paddingLeft="10dp"
        android:layout_toEndOf="@id/detail_description_label"
        tools:ignore="RtlCompat" />


    </RelativeLayout>

</ScrollView>
